            "data": "人民邮电出版社"
        },
        {
            "field": "ISBN",
            "data": "978-7-115-27946-0"
        },
        //以下固定进行完全匹配检索
        {
            "field": "ID",
            "data": 1
        },
        {
            "field": "tags",
            "data": [
                "Computer Science",
                "C/C++"
            ]
        },
        {
            "field": "bookcase",
            "data": [
                1,
                2,
                3,
                4,
                5
            ]
        },
        {
            "field": "available",
            "data": true
        },
        //以下固定进行模糊检索
        {
            "field": "price",
            "data": {
                "inf": 10.0,
                "sup": 100.0
            }
        }
    ]
}


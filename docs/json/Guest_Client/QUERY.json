//检索书籍
//完全匹配检索
{
    "token": "该对话所对应的令牌",
    "type": "QUERY",
    "command": "book",
    "rule": "completesearch",
    "order": [
        "name", "author"
    ],
    "records": 10, //每页10条记录
    "page": 2, //第2页
